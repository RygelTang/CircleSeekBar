<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SettingWheel">
        <attr name="ringWidth" format="dimension"/>
        <!--我们可以按住调节控件的半径-->
        <attr name="buttonRadius" format="dimension"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="currentProgress" format="integer"/>
        <attr name="ringBackground" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="name" format="string"/>
    </declare-styleable>

    <declare-styleable name="WheelController">
        <attr name="controllerMargin" format="dimension"/>
        <attr name="outerRadius" format="dimension"/>
        <attr name="innerRadius" format="dimension"/>
        <attr name="bigCalibrationLength" format="dimension"/>
        <attr name="smallCalibrationLength" format="dimension"/>
        <attr name="calibrationMargin" format="dimension"/>
        <attr name="bigCalibrationWidth" format="dimension"/>
        <attr name="smallCalibrationWidth" format="dimension"/>
        <attr name="calibrationTextSize" format="dimension"/>
        <attr name="calibrationTextMargin" format="dimension"/>
        <attr name="valueTextSize" format="dimension"/>

        <attr name="bgColor" format="color"/>
        <attr name="maxColor" format="color"/>
        <attr name="minColor" format="color"/>
        <attr name="valueTextColor" format="color"/>
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
        <attr name="calibrationColor" format="color"/>

        <attr name="max" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="curValue" format="integer"/>

        <attr name="smallStep" format="float"/>
        <attr name="bigStep" format="float"/>

    </declare-styleable>

</resources>